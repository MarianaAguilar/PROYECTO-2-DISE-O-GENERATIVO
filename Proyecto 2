  void colorear(){
    
 
     fill(255);
    rect(0,400,600,300);
      fill(0);
    textSize(15);
    println(y);
    text(instrucciones,50,410,480,800);
botonrojo();
     botonverde();
     botonazul();
  
}
  void botonrojo(){
    int x= width-500;
    
  int y=height/2+160;
  int w=width/10;
  int h=height/10;
  
  if ((mouseX>x)&&(mouseX<x+w)&&(mouseY>y)&&(mouseY<y+h)){
    fill(#F74863);
     if(mousePressed==true)
{
rojo=random(255);
verde=random(255);
azul= 0;
} 

}
else{
 
  fill(255,0,0);
  
}

ellipse(x,y,w,h);

  }
    void botonverde(){
      
        
    int x= width-420;
  int y=height/2+160;
  int w=width/10;
  int h=height/10;
  
  if ((mouseX>x)&&(mouseX<x+w)&&(mouseY>y)&&(mouseY<y+h)){
    fill(#A9F0C2);
     if(mousePressed==true)
{
rojo=random(255);
verde=random(0);
azul= random(255);
} 

}
else{
  fill(0,255,0);
  
}

ellipse(x,y,w,h);

  }
    void botonazul(){
      
    int x= width-350;
  int y=height/2+160;
  int w=width/10;
  int h=height/10;
  
  if ((mouseX>x)&&(mouseX<x+w)&&(mouseY>y)&&(mouseY<y+h)){
    fill(#2BFAE0);
     if(mousePressed==true)
{
rojo=0;
verde=random(255);
azul= random( 255);
} 

}
else{
  fill(0,0,255);
 
}

ellipse(x,y,w,h);

  }
  
  void mouseReleased() {
 
}

  

void dibujologo(){
  
    if (y1 < 3) {
    for (float x = -3; x <= 3; x += aum) {
      drawWing(x, y1);
    }
    y1 += aum;
  } else noLoop();
}


void drawWing(float xin, float yin) {
  //Vertical
  float x = xin * sin(cos(c * yin));   //Que tan seguido es el trazo
  float y = yin * sin(cos(c * xin));   //Cuantos trazos
  
  //Horizontal
  //float x = xin * cos(sin(4.0 * yin));   //Que tan seguido es el trazo
  //float y = yin * cos(sin(5.0 * xin));   //Cuantos trazos
  
  float x2 = map(x, -3, 3, 20, 400-20);     //Amplitud en x
  float y2 = map(y, -3, 3, 20, 400-20);     //Amplitud en y
  contador++;
  h = map(azul, rojo, 1948816,verde, p-80);     //Color difuminado
stroke(h, rojo,verde,azul);       //Color alfa de las curvas
  strokeWeight(random(.1, 2 )); 
 strokeWeight(0.1);
  //Grosor
  // point(x2, y2);     //
  fill(rojo,verde,azul);
  ellipse(x2, y2,1,1);  
}

void keyPressed() {
  for(int i=0; i<10; i++){
    if(key == 'q' || key == 'Q' ){
        save("logo"+i+".jpg");
    }
  }
  
  if (key == 'a' || key == 'A'){
  y = 0;     //Posición de re-trazado
  p = random(80, 360);     //Color random cada que se reanuda
  loop();     //Reanudar
}

if (key == 's' || key == 'S'){
  y = -1;     //Posición de re-trazado
  p = random(80, 360);     //Color random cada que se reanuda
  loop();     //Reanudar
}

if (key == 'd' || key == 'D'){
  y = -2;     //Posición de re-trazado
  p = random(80, 360);     //Color random cada que se reanuda
  loop();     //Reanudar
}

if (key == 'f' || key == 'F'){
  y = -3;     //Posición de re-trazado
  p = random(80, 360);     //Color random cada que se reanuda
  loop();     //Reanudar
}

if (key == 'w' || key == 'W'){
  noLoop();     //Reanudar
}
if (key == 'e' || key == 'E'){
  loop();     //Reanudar
}
}
