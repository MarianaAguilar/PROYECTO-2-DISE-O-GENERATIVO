    int x= width-80;
  int y=height-500;
  int w=width/10;
  int h=height/10;
  
  if ((mouseX>x)&&(mouseX<x+w)&&(mouseY>y)&&(mouseY<y+h)){
    fill(#D6B549);
     if(mousePressed==true)
{
escenario=1;
c=c+0.1;

} 

}
else{
  fill(0);
  
}
  
rect(x,y,w,h);

  }
  void botoncolorblanco(){
    int x= width-160;
  int y=height-500;
  int w=width/10;
