PFont font;
String titulo ="DISEÑA TU LOGOTIPO";
String instrucciones ="Manten precionado el circulo de color que quieras para pintar";
String inicio ="Crear";
String fondo ="Frenar / Aumentar";
int y=height-100;
float ct=255; 
//--------------------------------------
float aum;     //Aumento
float y1;
float h;
float p;
int contador;
float i = 0;
//---------------------------
//i
float c=0.1;
int escenario=0;
PImage img;
float tamdibx=400;
float tamdiby=400;
//_________________________________________
float rojo= random(20,100);
float verde= random(20,100);
float azul= random(20,100);

void setup(){
  background(255);
  size(600,600,P3D);
  
   img=loadImage("portada.png");
  font = loadFont("SitkaSmall-Italic-48.vlw");
  textFont(font);
   
 
  y1 =  -3;
  aum = .003;


}
void draw(){
  

    
if(escenario==0){
 background(255);
 image(img,0,0,width,height);
  botonInicio();
  
   titulo();
}
if(escenario==1){
         fill(255);
rect(400,00,400,400);
  botoncolornegro();
  botoncolorblanco();
  dibujologo();
  
  
  dibujologo();
  //canvas();

 fill(0);
 textSize(15);
text(fondo,440,60,200,200);
    
   colorear();  
    ins(); 


}
}
  void ins(){
    
      fill(0);
    textSize(15);
    println(y);
    text("con W puedes detener el dibujado",50,500,480,800);
    text("con Q guardar una imagen",50,530,480,800);
        text("y con A - D - F rotar el proceso",50,560,480,800);
   text("y con E volver a dibujar ",380,550,200,200);
}

void canvas(){
  fill(#0AA591);
   rect( 0,0,width,height);
  fill(c);
  rect( 20,20,tamdibx,tamdiby);
  
  
}
void titulo(){
    fill(0);
    textSize(32);
    println(y);
   if(y==width/2){
   }
   else {
      y=y+3;
   }
   text(titulo,width/6,y,300,80);
}
void botonInicio(){
  int x= width-80;
  int y=height/2;
  int w=width/10;
  int h=height/10;
  
  if ((mouseX>x)&&(mouseX<x+w)&&(mouseY>y)&&(mouseY<y+h)){
    fill(#D6B549);
     if(mousePressed==true)
{
escenario=1;

} 

}
else{
  fill(255);
  
}

rect(x,y,w,h);
 fill(0);
 textSize(20);
text(inicio,x+2,y+20,w,h);

}
